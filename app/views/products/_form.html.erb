<%= form_for product do |f| %>
  <p>
    <%= f.label :product_code %><br>
    <%= f.text_field :product_code %>
  </p>

  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :price %><br>
    <%= f.text_field :price %>
  </p>

  <p>
    <%= f.label :discount %><br>
    <%= f.text_field :discount %>
  </p>

  <p>
    <%= f.submit("#{@product.persisted? ? 'Update' : 'Create'} product") %>
  </p>

<% end %>
