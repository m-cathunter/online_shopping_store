<h1>Products</h1>

<table>
  <thead>
    <tr>
      <td>Code</td>
      <td>Name</td>
      <td>Price</td>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
    <tr>
      <td><%= product.product_code %></td>
      <td><%= product.name %></td>
      <td><%= number_to_currency(product.price) %></td>
    </tr>
    <% end %>
  </tbody>
</table>
