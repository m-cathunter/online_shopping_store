<h2>Current Cart</h2>

<table>
  <thead>
    <tr>
      <td>Product</td>
      <td>Price</td>
      <td>Quantity</td>
      <td></td>
    </tr>
  </thead>
  <tbody>
    <% @order_items.each do |order_item| %>
      <tr>
        <td><%= order_item.product.name %></td>
        <td><%= number_to_currency(order_item.price) %></td>
        <td><%= order_item.quantity %></td>
        <td><%= order_item.price_for_product %></td>
        <td>
          <%= form_for order_item, method: :delete do |f| %>
            <%= f.submit "Remove" %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
  <tfoot>
    <tr>
      <td colspan="4" align="rigft">
        <%= number_to_currency(current_cart.total_price)%>
      </td>
    </tr>
  </tfoot>
</table>

<%= link_to 'Checkout', checkout_path %>
